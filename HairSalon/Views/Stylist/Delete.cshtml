@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Are you <em>sure</em> you want to delete @Model.Name?</h2>

@using (Html.BeginForm())
{
    <input type="submit" value="Yes" class="btn btn-default" />
}

<button class="btn btn-default">@Html.ActionLink("No, back to stylists", "Details", "Stylist", new { id = @Model.StylistId })</button>
